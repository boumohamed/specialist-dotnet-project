@model WebSpeciliste.Models.SpecialistDto


<div class="container-xxl py-5 bg-dark page-header mb-5">
    <div class="container my-5 pt-5 pb-4">
        <h1 class="display-3 text-white mb-3 animated slideInDown">@Model.SpecialistName 's Profile</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb text-uppercase">
                <li class="breadcrumb-item"><a asp-action="SpecialistsCrud">Specialist</a></li>
                <li class="breadcrumb-item text-white active" aria-current="page">Update</li>
            </ol>
        </nav>
    </div>
</div>
<h1 class="text-center mb-5 wow fadeInUp text-primary" data-wow-delay="0.1s">Update Your Profile</h1>
<div class="row g-4">

    <div class="col-md-12">
        <div class="wow fadeInUp" data-wow-delay="0.5s">
            <form asp-action="UpdateSpecialist">
                <div class="row g-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-12">
                        <input asp-for="SpecialistID" hidden/>
                        <div class="form-floating">
                            <input type="text" asp-for="SpecialistName" class="form-control" id="name" placeholder="Your Name">
                            <label for="name">Name</label>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-floating">
                            <input type="email" asp-for="SpecialistEmail" class="form-control" id="email" placeholder="Your Email">
                            <label for="email">Email</label>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-floating">
                            <input type="text" asp-for="SpecialistTel" class="form-control" id="phone" placeholder="Your Phone">
                            <label for="email">Phone</label>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-floating">
                            <input type="File" class="form-control" placeholder="Your Image">
                            <label for="email">Image</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-primary w-100 py-3" type="submit">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

